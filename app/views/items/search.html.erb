<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="page-header">
        <h1>Search</h1>
      </div>

      <%= search_form_for(@search, url: search_items_path) do |f| %>

        <div class="form-group">
          <%= f.label :title_cont, 'Title' %>
          <%= f.text_field :title_cont, class: 'form-control', placeholder: 'Title' %>
        </div>

        <div class="form-group">
          <%= f.label :description_cont, 'Description' %>
          <%= f.text_field :description_cont, class: 'form-control', placeholder: 'Description' %>
        </div>

        <div class="form-group">
          <%= f.label :toy_type_eq, 'Type' %>
          <%= f.select :toy_type_eq, options_for_select([['Book', 'book'],
                                                    ['Clothing', 'clothing'],
                                                    ['Cellphone', 'cellphone'],
                                                    ['Computer', 'computer']], params[:q].try(:[], :toy_type_eq)),
                       { include_blank: 'Any' },
                       { class: 'form-control' } %>
        </div>

        <%= f.submit 'Search', class: 'btn btn-success' %>
      <% end %>
      <hr>
      <p>Possible search terms:</p>
      <ul>
        <li>Title: "galaxy"</li>
        <li>Title: "iphone"</li>
        <li>Description: "cosplay"</li>
        <li>Description: "power"</li>
        <li>Select: "Any"</li>
      </ul>
    </div>
  </div>

  <% unless params[:q].nil? %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="page-header">
          <h1>Results</h1>
        </div>

        <% if @items.empty? %>
          <div class="alert alert-info">
            No items found.
          </div>
        <% end %>

        <% @items.each do |item| %>
          <h3>
            <%= item.title %><br />
            <small><%= item.toy_type %></small>
          </h3>
          <p><%= item.description %></p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
